extends layout

block content
  .container-fluid
    .row
      .col
        .container-fluid
          .row
            .col
              <table border="0" cellspacing="5" cellpadding="5">
                <tbody>
                  <tr>
                    <td>Fecha Mínima:</td>
                    <td><input type='text'  id='min' name='min'></td>
                  </tr>
                  <tr>
                    <td>Fecha Máxima:</td>
                    <td><input type='text'  id='max' name='max'></td>
                  </tr>
                </tbody>
              </table>
          .row.barraresultado
            .col Registros
          .row.rowtabla
            .row  
              .col                
                table#tablaEstadistica.table.table-bordered.tabla
                  thead
                    tr
                      th(scope='col') Rol
                      th(scope='col') Género
                      th(scope='col') Turno
                      th(scope='col') Carrera Técnica
                      th(scope='col') Fecha de Registro
                      th(scope='col') Tipo de Servicio
                  tbody
                    each registro in registros 
                      tr 
                        th #{registro.Roles } 
                        td #{registro.Genero}
                        td #{registro.Turno}
                        td #{registro.Carrera_Tecnica}
                        td #{registro.Fecha_Registro.getUTCFullYear() + '/' + (registro.Fecha_Registro.getMonth()+1) +  '/' + registro.Fecha_Registro.getDate()}
                        td #{registro.Servicio}  
    script(src="/js/sweet_carga.js")
