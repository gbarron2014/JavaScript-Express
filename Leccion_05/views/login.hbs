<div class="container">
    <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg navbar-primary bg-primary">
                <div class="container-md">
                    <h1>Login con MongoDb</h1>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="login">
                <h1>Ingresando al sistema</h1>
                {{#if message}}
                <h6 style="color:red;">{{message}}</h3>
                {{/if}}
                <form action="/verify" method="post">
                    <!--  usuario -->
                    <label for="username">
                        <i class="fas fa-user"></i>
                    </label>
                    <input type="text" name="username" placeholder="Usuario" id="username" required>

                    <!-- Contraseña -->
                    <label for="password">
                        <i class="fas fa-lock"></i>
                    </label>
                    <input type="password" name="password" placeholder="Conntraseña" id="password" required>
                    <input type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>
</div>